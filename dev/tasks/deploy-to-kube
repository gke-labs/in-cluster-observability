set -e

echo "Building docker image..."
docker build -t in-cluster-observability-agent:latest -f images/in-cluster-observability-agent/Dockerfile .

echo "Deploying to Kubernetes..."
kubectl apply -f k8s/manifests.yaml

echo "Deployment complete."
echo "You may need to load the image into your cluster if using Kind/Minikube:"
echo "  kind load docker-image in-cluster-observability-agent:latest"
echo "  minikube image load in-cluster-observability-agent:latest"
